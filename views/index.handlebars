    <ol class="progress_Steps">
        {{!-- Add the active classlist after answering all the questions from the category. --}}
        <li class="gegevens_icon active" data-title="gegevens">Gegevens</li> 
        <li class="voeding_icon" data-title="voeding">Voeding</li>
        <li class="bewegen_icon" data-title="bewegen">Bewegen</li>
    </ol>

<main> 
{{#each questionnaires}}
<section>
    <div class="question_number">Vraag <span class="question_counter">1</span>/6</div>
    <h2>{{this.text}}</h2>
    {{#each ../questionnaireResponse}}
        {{#ifCond this.questionId ../this.id}}
            {{#if this.response}}
                <p>{{this.response}}</p>
            {{/if}}
            {{#if this.choiceOptionId}}
                <p>{{this.choiceOptionId}}</p>
            {{/if}}
        {{/ifCond}}
    {{/each}}

    <div class="button_wrapper"> 
        <button class="vorige_question_button">Vorige</button>
        <button class="volgende_question_button">Volgende</button>
    </div>
