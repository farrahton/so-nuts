<main class="goals_page">

      <form class="add_goal">
              {{#each food_goals}}
                <input  type="checkbox" 
                        id={{this.title}} 
                        name="goal"
                        value={{this.title}}>
                <label for="goal">{{this.title}}
                  <input  type="number" 
                    name="repetition" 
                    placeholder="Hoe vaak herhalen" 
                    min="1"/>
                <label for="timeframe">Tijdsduur: </label>
                <select name="timeframe" 
                        id="timeframe">
                    <option value="Daily">Dagelijks</option>
                    <option value="Weekly">Wekelijks</option>
                    <option value="Monthly">Maandelijks</option>
                </select>
                </label>
                {{!-- {{#ifCond this.selected true}} checked{{/ifCond}} --}}
            {{/each}}
                <input type="submit" value="+ Maak doel(en) aan" />
        </form>
          
        <ul class="goal_list">
            <li>Loading...</li>
        </ul>

</main>




