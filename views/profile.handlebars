<main class="profile">
    <h1>Profiel</h1>
    <ul>
        {{#each questionnaireResponse}}
            <li>
                {{#each ../questionnaire}}
                    {{#ifCond this.id ../this.questionId}}
                        {{#if this.questionText}}
                            <p>{{this.questionText}}</p>
                        {{/if}}
                        {{#if this.text}}
                            <p>{{this.text}}</p>
                        {{/if}}
                    {{/ifCond}}
                {{/each}}
                <input type="text" value={{this.response}}>
            </li>
        {{/each}}
    </ul>
    <button>Save</button>
</main>

